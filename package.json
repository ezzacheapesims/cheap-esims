{
  "name": "voyage-monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "concurrently -k \"npm run dev --workspace apps/web\" \"npm run start:dev --workspace apps/backend\" \"npm run dev --workspace apps/worker\"",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16"
  }
}
